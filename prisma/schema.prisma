generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    CLIENT
    RESTAURANT
    DELIVERY
    ADMIN
}

model User {
    id            String    @id @default(uuid())
    email         String    @unique
    password      String?
    name          String?
    phone         String?
    role          Role      @default(CLIENT)
    
    // OAuth fields
    oauthProvider String?
    oauthId       String?
    
    createdAt     DateTime  @default(now())
    updatedAt     DateTime  @updatedAt
    
    @@index([email])
    @@index([oauthProvider, oauthId])
}
